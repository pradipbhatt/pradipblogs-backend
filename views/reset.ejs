<!-- views/reset.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reset Password</title>
  <style>
    body {
      background-color: #000;
      color: #fff;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      font-family: Arial, sans-serif;
    }
    .container {
      background: rgba(255, 255, 255, 0.1);
      padding: 20px;
      border-radius: 8px;
      width: 300px;
      text-align: center;
    }
    input, button {
      width: 100%;
      padding: 10px;
      margin: 10px 0;
      border-radius: 4px;
      border: none;
      outline: none;
    }
    input {
      background: #333;
      color: #fff;
    }
    button {
      background: #634da3;
      color: #fff;
      cursor: pointer;
    }
    button:hover {
      background: #4e3b82;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>Reset Password</h2>
    <form action="/api/reset-password/<%= id %>/<%= token %>" method="POST">
      <input type="password" name="password" placeholder="New Password" required>
      <button type="submit">Reset Password</button>
    </form>
  </div>
</body>
</html>
